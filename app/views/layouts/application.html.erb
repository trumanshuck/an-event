<!DOCTYPE html>
<html>
  <head>
    <title>Carrie & Truman</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css2?family=Amatic+SC&family=Open+Sans&family=Delius&display=swap' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <%
    messages = [
      "Hasn't this happened already?",
      "Catballs is extremely pleased."
    ]
  %>
  <body class="bg-gray-100">
    <header>
      <nav class="max-w-4xl mx-auto md:flex justify-between px-4 md:py-4 font-title text-center md:text-left text-2xl">
        <%= link_to messages.sample, "/", class: "pb-4 md:pb-0 inline-block" %>
        <div class="flex justify-between">
          <%= link_to "Map", "/", class: "mx-2 #{'underline' if current_page?(controller: "home")}"  %>
          <%= link_to "Journal", stops_url, class: "mx-2 #{'underline' if current_page?(controller: "stops")}" %>
          <%= link_to "Registry", registry_index_url, class: "mx-2 #{'underline' if current_page?(controller: "registry")}" %>
          <%= link_to "Send Your Love", thoughts_url, class: "mx-2 #{'underline' if current_page?(controller: "thoughts")}" %>
        </div>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>
  </body>
</html>
