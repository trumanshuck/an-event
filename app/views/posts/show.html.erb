<main>
  <h1 class="text-6xl">
    <%= @post.title %>
  </h1>
  <h2 class="text-4xl">
    <%= @post.created_at.strftime("%B %-d, %Y") %> - <%= @post.stop.name %>
  </h2>
  <div class="mt-12">
    <%= @post.content %>
  </div>
  <div class="flex flex-row justify-between mt-12">
    <div>
      <%= link_to_if @prev.present?, @prev&.title, url_for(@prev) %>
    </div>
    <div>
      <%= link_to_if @next.present?, @next&.title, url_for(@next) %>
    </div>
  </div>
</main>
