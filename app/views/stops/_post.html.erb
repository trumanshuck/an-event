<article id="<%= post.slug %>" class="mb-32">
  <div class="text-6xl font-title bg-sky text-gray-100 text-center">
    <div><%= post.title %></div>
    <div class="text-2xl"><%= post.user.name %> - <%= post.created_at.strftime("%B %-d, %Y") %></div>
  </div>

  <div class="max-w-4xl mx-auto">
    <div class="prose my-8 max-w-4xl text-2xl">
      <%= post.description %>
    </div>

    <article class="mt-12 prose bg-white px-4 py-12 border-gray-200 rounded shadow min-w-full">
      <%= post.content %>
    </article>
  </div>
</article>
