<main>
  <h1 class="text-6xl">
    <%= @stop.name %>
  </h1>
  <h2 class="text-4xl">
    <%= @stop.from.strftime("%B %-d, %Y") %> - <%= @stop.to.strftime("%B %-d, %Y") %>
  </h2>

  <%= image_tag @stop.splash %>

  <h3 class="text-2xl mt-12">
    Posts
  </h3>
  <ul>
    <% @stop.posts.in_order.each do |post| %>
      <li>
        <%= link_to post.title, url_for(post) %>
      </li>
    <% end %>
  </ul>
  <div class="flex flex-row justify-between mt-12">
    <div>
      <%= link_to_if @prev.present?, @prev&.name, url_for(@prev) %>
    </div>
    <div>
      <%= link_to_if @next.present?, @next&.name, url_for(@next) %>
    </div>
  </div>
</main>
