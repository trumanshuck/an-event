<%= form_tag '/sessions/create' do %>
  <%= label_tag :name, nil, class: "block text-gray-700 text-sm font-bold mb-2" %>
  <%= text_field_tag :name, nil, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  <%= label_tag :password, nil, class: "block text-gray-700 text-sm font-bold mb-2" %>
  <%= password_field_tag :password, nil, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>

  <%= submit_tag "Login", class: "bg-indigo-400 hover:bg-indigo-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
<%end%>
