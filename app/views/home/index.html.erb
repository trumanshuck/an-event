<h1 class="text-6xl font-semibold">
  <%= @messages.sample %>
</h1>
<h2 class="text-4xl font-semibold">
  Carrie & Truman are getting married.
</h2>

<div class="text-indigo-700 stroke-current stroke-0 fill-current mt-12 w-8/12">
  <%= render 'svg/map', stops: @stops %>
</div>

<h2 class="text-4xl font-semibold mt-24">
  Where we've been
</h2>

<div>
  <% @stops.take(3).each do |stop| %>
   <%= link_to url_for(stop) do %>
      <div class="relative flex items-center justify-center object-cover object-center h-32 overflow-hidden mt-12">
        <%= image_tag stop.splash %>
        <div class="flex flex-col justify-center items-center absolute text-white inset-0 z-auto" style="text-shadow: 2px 2px rgba(0, 0, 0, .8);">
          <h3 class="text-4xl">
            <%= stop.name %>
          </h3>
          <p>
            <%= stop.from.strftime("%B %-d, %Y") %> - <%= stop.to.strftime("%B %-d, %Y") %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="mt-12">
  <%= link_to("See All (#{@stops.size})", stops_path, class: "text-2xl underline") %>
</div>
